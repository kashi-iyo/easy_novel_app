= link_to '投稿一覧', root_path, class: 'nav-link'

p= @post.title
p= raw Rinku.auto_link(simple_format(h(@post.description), {}, sanitize: false, wrapper_tag: "div"))
p= simple_format(h(@post.content), {}, sanitize: false, wrapper_tag: "div")
p= @post.updated_at
p= link_to '編集', edit_post_path, class: 'btn'
p= link_to '削除', @post, method: :delete, data: { confirm: "投稿を削除します。よろしいですか？" }, class: 'btn'
